<Window x:Class="SnakeGame.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameProject" xmlns:viewmodel="clr-namespace:SnakeGame.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:GameViewModel}"
        mc:Ignorable="d"
        Title="Options window" Height="538" Width="434" Background="#FF00DEFF" Foreground="Red" OpacityMask="Red" BorderBrush="Red" MinWidth="434" MinHeight="538" MaxWidth="434" MaxHeight="538" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" WindowState="Maximized">
    <Grid x:Name="OptionsGrid" RenderTransformOrigin="0.504,0.49" MaxWidth="434" MaxHeight="538">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,0">
                <GradientStop Color="#FFC300FF"/>
                <GradientStop Color="#FFFFDE00"/>
                <GradientStop Color="#FFB92D0A"/>
                <GradientStop Color="#FF52193B"/>
                <GradientStop Color="#FFDCCEBB"/>
                <GradientStop Color="#FFFF00EF"/>
                <GradientStop Color="#FFE6FF00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="SaveButton" Content="Save changes" Command="{Binding SaveChangesCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="140" FontSize="19" Background="#66000000" BorderBrush="Black" Foreground="#FF00FFBF" BorderThickness="2,2,2,2" Margin="284,468,0,0" Cursor="Hand"/>
        <Button x:Name="DiscardButton" Content="Discard" Command="{Binding DiscardChangesCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="109" FontSize="19" Background="#66000000" BorderBrush="Black" Foreground="#FF00FFBF" BorderThickness="2,2,2,2" Margin="170,468,0,0" Cursor="Hand"/>
        <Button x:Name="ToDefaultButton" Content="Reset to default" Command="{Binding ResetToDefaultCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="155" FontSize="19" Background="#66000000" BorderBrush="Black" Foreground="#FF00FFBF" BorderThickness="2,2,2,2" Margin="10,468,0,0" Cursor="Hand"/>


        <Label x:Name="StartingLength" Content="Snake's starting length:" HorizontalAlignment="Left" Margin="21,85,0,0" VerticalAlignment="Top" Height="38" Width="208" FontSize="18" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0" MinWidth="70"/>
        <Slider x:Name="SnakeLengthSlider" HorizontalAlignment="Left" Margin="247,95,0,0" VerticalAlignment="Top" Width="161" Minimum="2" Maximum="{Binding MaxSnakeStartingLength}" Value="{Binding SnakeStartingLength}"/>
        <Label x:Name="StartingLength_Copy" Content="!! WORK IN PROGRESS !!" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="38" Width="218" FontSize="18" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0" MinWidth="70"/>

    </Grid>
</Window>
