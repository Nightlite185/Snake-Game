<Window x:Name="Window" x:Class="SnakeGameProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameProject" xmlns:viewmodel="clr-namespace:SnakeGame.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:GameViewModel}"
        mc:Ignorable="d"
        Title="Snake game" Height="806" Width="1577"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
        Focusable="True"
        ResizeMode="NoResize"
        MinHeight="802"
        MinWidth="884" WindowStartupLocation="CenterScreen" Background="#FF0E0056" Icon="/Snake_35967.ico">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="798" Width="1577">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="681*"/>
            <ColumnDefinition Width="696*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFC000ED" Offset="0"/>
                <GradientStop Color="#FF00D6FF" Offset="0.9999"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Viewbox Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Height="643" Margin="0,132,0,0" Width="642" Grid.Column="1">
            <Canvas x:Name="GameCanvas" Background="#FF010613" Width="642" Height="641"/>
        </Viewbox>

        <Button x:Name="StartButton" Content="Start" Command="{Binding StartGameCommand}" Visibility="{Binding StartButton_Visibility}"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2" Margin="0,334,0,0"/>
        <Button x:Name="RestartButton" Content="Reset" Command="{Binding RestartGameCommand}" Visibility="{Binding RestartButton_Visibility}"  HorizontalAlignment="Center" Margin="0,425,0,0" VerticalAlignment="Top" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2"/>

        <Rectangle HorizontalAlignment="Center" Height="72" Margin="0,35,0,0" Stroke="#FF03F9E8" VerticalAlignment="Top" Width="152" Fill="#4C000000" StrokeThickness="2"/>
        <Label x:Name="ScoreLabel" Content="Score: " HorizontalAlignment="Left" Margin="35,49,0,0" VerticalAlignment="Top" Height="44" Width="70" FontSize="22" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0" MinWidth="70"/>
        <Label x:Name="ScoreDisplay" Content="{Binding Score}" HorizontalAlignment="Left" Margin="110,49,0,0" VerticalAlignment="Top" Height="44" Width="56" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Variable Display" Foreground="#FFA1FFDF" RenderTransformOrigin="0.512,0.508"/>
        <Label x:Name="Title" Content="ðŸ SNAKE ðŸ" Margin="194,28,230,684" FontSize="36" FontWeight="Bold" Foreground="#FF71FF00" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF00FF3E" BorderThickness="5,5,5,5" Grid.Column="1" RenderTransformOrigin="0.444,0.565"/>
        <Button x:Name="OptionsButton" Visibility="{Binding OptionsButton_Visibility}" Content="Options" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,708,0,0" RenderTransformOrigin="0.5,0.5" Click="OptionsButton_Click"/>
        <Label x:Name="ScoreboardLabel" Content="SCOREBOARD" Margin="213,28,213,684" FontSize="36" FontWeight="Bold" Foreground="#FF00FFE2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF00FFED" BorderThickness="5,5,5,5" Grid.Column="2" RenderTransformOrigin="0.444,0.565"/>
        <Border BorderBrush="#FF7CFFF0" BorderThickness="4,4,4,4" Grid.Column="2" Margin="0,10,10,10" UseLayoutRounding="True">
            <ListView x:Name="Scoreboard" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="6,115,6,6" Background="#5E030054" FontSize="44" SelectionChanged="ListView_SelectionChanged" FontFamily="Bahnschrift" BorderBrush="#00828790">
                <ListView.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF00BB" Offset="0.984"/>
                        <GradientStop Color="#FFFFF500" Offset="0"/>
                    </LinearGradientBrush>
                </ListView.Foreground>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>