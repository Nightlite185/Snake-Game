<Window x:Name="Window" x:Class="SnakeGameProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameProject" xmlns:viewmodel="clr-namespace:SnakeGame.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:GameViewModel}"
        mc:Ignorable="d"
        Title="Snake game" Height="806" Width="884"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
        Focusable="True"
        ResizeMode="NoResize"
        MinHeight="802"
        MinWidth="884" WindowStartupLocation="CenterScreen" Background="#FF0E0056" Icon="/Snake_35967.ico">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="798" Width="884">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFC000ED" Offset="0"/>
                <GradientStop Color="#FF00D6FF" Offset="0.9999"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Viewbox Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Top" Height="643" Margin="0,132,0,0" Width="642" Grid.Column="1">
            <Canvas x:Name="GameCanvas" Background="#FF010613" Width="642" Height="641"/>
        </Viewbox>

        <Button x:Name="StartButton" Content="Start" Command="{Binding StartGameCommand}" Visibility="{Binding StartButton_Visibility}"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="72" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2"/>
        <Button x:Name="RestartButton" Content="Reset" Command="{Binding RestartGameCommand}" Visibility="{Binding RestartButton_Visibility}"  HorizontalAlignment="Center" Margin="0,454,0,0" VerticalAlignment="Top" Height="72" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2"/>

        <Rectangle HorizontalAlignment="Center" Height="72" Margin="0,23,0,0" Stroke="#FF03F9E8" VerticalAlignment="Top" Width="152" Fill="#4C000000" StrokeThickness="2"/>
        <Label x:Name="ScoreLabel" Content="Score: " HorizontalAlignment="Left" Margin="28,39,0,0" VerticalAlignment="Top" Height="44" Width="74" FontSize="22" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0"/>
        <Label x:Name="ScoreDisplay" Content="{Binding Score}" HorizontalAlignment="Left" Margin="102,39,0,0" VerticalAlignment="Top" Height="44" Width="74" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Variable Display" Foreground="#FFA1FFDF"/>
        <Label x:Name="Title" Content="ðŸ SNAKE ðŸ" Margin="178,22,202,691" FontSize="36" FontWeight="Bold" Foreground="#FF71FF00" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF00FF3E" BorderThickness="3,3,3,3" Grid.Column="1"/>

    </Grid>
</Window>