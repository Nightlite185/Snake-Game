<Window x:Class="SnakeGameProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameProject" xmlns:viewmodel="clr-namespace:SnakeGame.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:GameViewModel}"
        mc:Ignorable="d"
        Title="Snake game" Height="433" Width="800"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
        Focusable="True">

    <Grid Margin="0,0,0,-62" RenderTransformOrigin="0.507,0.436">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFC000ED" Offset="0"/>
                <GradientStop Color="#FF00D6FF" Offset="0.9999"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Canvas x:Name="GameCanvas" Background="#FF010613" Margin="204,10,204,77"/>
        
        <Button x:Name="StartButton" Content="Start" Command="{Binding StartGameCommand}" Visibility="{Binding StartButton_Visibility}"  HorizontalAlignment="Left" Margin="257,415,0,0" VerticalAlignment="Top" Height="54" Width="98" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2"/>
        <Button x:Name="RestartButton" Content="Reset" Command="{Binding RestartGameCommand}" Visibility="{Binding RestartButton_Visibility}"  HorizontalAlignment="Left" Margin="448,415,0,0" VerticalAlignment="Top" Height="54" Width="101" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2"/>

        <Rectangle HorizontalAlignment="Left" Height="72" Margin="21,176,0,0" Stroke="#FF03F9E8" VerticalAlignment="Top" Width="153" Fill="#4C000000" StrokeThickness="2"/>
        <Label x:Name="ScoreLabel" Content="Score: " HorizontalAlignment="Left" Margin="26,192,0,0" VerticalAlignment="Top" Height="44" Width="74" FontSize="22" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0"/>
        <Label x:Name="ScoreDisplay" Content="{Binding Score}" HorizontalAlignment="Left" Margin="100,192,0,0" VerticalAlignment="Top" Height="44" Width="74" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Variable Display" Foreground="#FFA1FFDF"/>
        
    </Grid>
</Window>