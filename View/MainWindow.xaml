<Window x:Class="SnakeGame.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame.View"
        mc:Ignorable="d"
        Title="Snake game" Height="806" Width="1577"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
        Focusable="True"
        ResizeMode="NoResize"
        MinHeight="802"
        MinWidth="884" WindowStartupLocation="CenterScreen" Background="#FF0E0056">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="798" Width="1577" MouseDown="Grid_MouseDown">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="681*"/>
            <ColumnDefinition Width="696*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFC000ED" Offset="0"/>
                <GradientStop Color="#FF00D6FF" Offset="0.9999"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Viewbox Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Height="643" Margin="0,132,0,0" Width="642" Grid.Column="1">
            <Canvas x:Name="GameCanvas" Background="#FF010613" Width="642" Height="641"/>
        </Viewbox>

        <Button x:Name="StartButton" Content="Start" Command="{Binding StartGameCommand}" Visibility="{Binding StartButton_Visibility}"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2" Margin="0,334,0,0" Cursor="Hand"/>
        <Button x:Name="RestartButton" Content="Reset" Command="{Binding RestartGameCommand}" Visibility="{Binding RestartButton_Visibility}"  HorizontalAlignment="Center" Margin="0,425,0,0" VerticalAlignment="Top" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2" Cursor="Hand"/>

        <Rectangle HorizontalAlignment="Center" RadiusX="15" RadiusY="15"  Height="72" Margin="0,35,0,0" Stroke="#FF03F9E8" VerticalAlignment="Top" Width="152" Fill="#4C000000" StrokeThickness="2"/>
        <Label x:Name="ScoreLabel"  Content="Score: " HorizontalAlignment="Left" Margin="35,49,0,0" VerticalAlignment="Top" Height="44" Width="70" FontSize="22" FontFamily="Segoe UI Variable Text Semibold" Foreground="#FF95F9C0" MinWidth="70"/>
        <Label x:Name="ScoreDisplay" Content="{Binding Score}" HorizontalAlignment="Left" Margin="110,49,0,0" VerticalAlignment="Top" Height="44" Width="56" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Variable Display" Foreground="#FFA1FFDF" RenderTransformOrigin="0.512,0.508"/>
        <Border BorderBrush="#FF93FFAD" BorderThickness="5,5,5,5" CornerRadius="17" Margin="194,28,230,684" Grid.Column="1" >
            <Label x:Name="Title" Content="🐍 SNAKE 🐍" FontSize="36" FontWeight="Bold" Foreground="#FF93FFAD" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Transparent" RenderTransformOrigin="0.444,0.565"/>
        </Border>
        <Button x:Name="OptionsButton" Visibility="{Binding OptionsButton_Visibility}" Content="Options" Height="65" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FFF1FF00" Foreground="#FFFFD200" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,708,0,0" RenderTransformOrigin="0.5,0.5" Command="{Binding OpenOptionsCommand}" Cursor="Hand"/>
        <Border CornerRadius="30" Background="#5E030054" BorderBrush="#FF7CFFF0" BorderThickness="4,4,4,4" Grid.Column="1" Margin="690,132,27,25" UseLayoutRounding="True" Grid.ColumnSpan="2">
            <ListView x:Name="Scoreboard" ItemsSource="{Binding VisualScores}" Margin="6,6,6,6" Background="Transparent" FontSize="35" FontFamily="Bahnschrift" BorderBrush="#00828790" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF00BB" Offset="0.984"/>
                        <GradientStop Color="#FFFFF500" Offset="0"/>
                    </LinearGradientBrush>
                </ListView.Foreground>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Rank}" VerticalAlignment="Center" Width="84"/>
                            <TextBlock Text="{Binding Name}" Width="149" FontSize="25" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding StrPoints}" Width="170"/>
                            <TextBlock Text="{Binding StrTime}" Width="227" FontSize="25" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border Margin="199,28,209,684" Grid.Column="2" BorderBrush="#FF00FFED" BorderThickness="5,5,5,5" CornerRadius="17">
            <Label x:Name="ScoreboardLabel" Content="SCOREBOARD" FontSize="36" FontWeight="Bold" Foreground="#FF00FFED" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Transparent" RenderTransformOrigin="0.444,0.565"/>
        </Border>

        <Label x:Name="InputTip" Content="Insert nickname here" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Height="36" Width="180" FontFamily="Segoe UI" FontStyle="Italic" Foreground="#FFD2D2D2" MinWidth="70" Visibility= "{Binding InputTip_Visibility}" FontSize="18"/>
        <Border CornerRadius="14" Background="#3300FF27" BorderBrush="#E5ACFFAD" BorderThickness="1" HorizontalAlignment = "Center" VerticalAlignment="Top" Width="180" Height="58" Margin="0,212,0,0" >
            <TextBox x:Name="NicknameInput" GotKeyboardFocus="NicknameInput_GotKeyboardFocus" LostKeyboardFocus="NicknameInput_LostFocus" MaxLines = "1" MinLines = "1" AcceptsTab = "False" ForceCursor = "False" TextWrapping="NoWrap" FontSize="24" FontStyle="Normal" FontWeight="DemiBold" Background="Transparent" Foreground="#FFACFFAD" TextAlignment="Center" CaretBrush="#FFEAEAEA" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="-1,-1,-1,-1" BorderBrush="#00ABADB3"/>
        </Border>
        <Button x:Name="ResetScoreboardButton" Content="Reset" Command="{Binding ResetScoreboardCommand}"  HorizontalAlignment="Left" Margin="523,38,0,0" VerticalAlignment="Top" Height="66" Width="140" FontSize="30" Background="#66000000" BorderBrush="#FF00FFED" Foreground="#FF00FFED" BorderThickness="2,2,2,2" Grid.Column="2" Cursor="Hand"/>

    </Grid>
</Window>
